    <header>
      <h1>Aeroportos</h1>
      <img src="http://4.bp.blogspot.com/-0B1MRZKsLW0/U3wAYnIcMdI/AAAAAAAAHRA/gYdYAdWKqA4/s1600/airplane+2.gif" alt="">
    </header>

    <nav>
        <a href="index"> <button>Início</button> </a>
        <a href="lista"> <button>Listar</button> </a>
        <a href="insere"> <button>Inserir</button> </a>
        <a href="remove"> <button>Remover</button> </a>
        <a href="pesquisa"> <button>Pesquisa</button> </a>
    </nav>

    <section class="remove">
        <h1>Remove Aeroporto</h1>

        <form action="/remove" method="post">
          <p>Obs: O campo aberto tem maior prioridade que a seleção</p>
            <div class="input">
                <label>Aeroporto: </label>
                <input type="text" name="aeroporto">

                <select name="aeroporto1" id="">
                  <option value="<%= '' %>"> Aeroportos </option>	
                  <% array.forEach(function(item){ %>
                    <option value="<%= item.aeroporto %>"><%= item.aeroporto %></option>	
                  <%})%>
                </select>
                
            </div>
      
            <button type="submit"> Deletar </button>
        </form>
    </section>

  </body>
